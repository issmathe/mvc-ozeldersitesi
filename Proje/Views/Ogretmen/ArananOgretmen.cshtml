@model List<Proje.Models.Ogretmen>
<!-- Bu sayfa öğrencinin anasayfada aradığı öğretmen sayfasıdır -->
<h2>Öğretmen Sonuçları</h2>

@if (Model.Count == 0)
{
    <p>Seçilen kriterlere uygun öğretmen bulunamadı.</p>
}
else
{
    <div class="row">
        @foreach (var ogretmen in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@ogretmen.ResimUrl" class="card-img-top" alt="Öğretmen Resmi">
                    <div class="card-body">
                        <h5 class="card-title">@ogretmen.OgretmenAdi @ogretmen.OgretmenSoyadi</h5>
                        <p class="card-text">Branşı: @ogretmen.Bransi</p>
                        <p class="card-text">Üniversite: @ogretmen.Universite</p>
                        <p class="card-text">Şehir: @ogretmen.Sehir</p>
                        <p class="card-text">Telefon: @ogretmen.Telefon</p>
                        <p class="card-text">Ücret: @ogretmen.Ucret</p>
                        <p class="card-text">Açıklama: @ogretmen.Aciklama</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
